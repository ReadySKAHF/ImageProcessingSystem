<Window x:Class="ImageProcessingSystem.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ImageProcessingSystem.ViewModels"
        xmlns:converters="clr-namespace:ImageProcessingSystem.Converters"
        mc:Ignorable="d"
        Title="Master-Slave Image Processing System" Height="700" Width="1200"
        WindowStartupLocation="CenterScreen">

    <Window.DataContext>
        <local:MainViewModel/>
    </Window.DataContext>

    <Window.Resources>
        <converters:StringContainsConverter x:Key="StringContainsConverter"/>

        <Style TargetType="Button">
            <Setter Property="Padding" Value="15,5"/>
            <Setter Property="Margin" Value="5"/>
            <Setter Property="FontSize" Value="13"/>
            <Setter Property="Cursor" Value="Hand"/>
        </Style>

        <Style TargetType="TextBox">
            <Setter Property="Padding" Value="5"/>
            <Setter Property="Margin" Value="5"/>
            <Setter Property="FontSize" Value="13"/>
            <Setter Property="VerticalContentAlignment" Value="Center"/>
        </Style>

        <Style TargetType="ComboBox">
            <Setter Property="Padding" Value="5"/>
            <Setter Property="Margin" Value="5"/>
            <Setter Property="FontSize" Value="13"/>
        </Style>

        <Style TargetType="Label">
            <Setter Property="Margin" Value="5"/>
            <Setter Property="FontSize" Value="13"/>
            <Setter Property="VerticalAlignment" Value="Center"/>
        </Style>

        <Style TargetType="GroupBox">
            <Setter Property="Margin" Value="5"/>
            <Setter Property="Padding" Value="10"/>
            <Setter Property="FontWeight" Value="Bold"/>
        </Style>
    </Window.Resources>

    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Панель управления -->
        <GroupBox Header="Конфигурация узла" Grid.Row="0">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <!-- Строка 1 -->
                <Label Grid.Row="0" Grid.Column="0" Content="Тип узла:"/>
                <ComboBox Grid.Row="0" Grid.Column="1" 
                         ItemsSource="{Binding NodeTypes}" 
                         SelectedItem="{Binding SelectedNodeType}"
                         IsEnabled="{Binding CanStart}"/>

                <Label Grid.Row="0" Grid.Column="2" Content="Локальный порт:"/>
                <TextBox Grid.Row="0" Grid.Column="3" 
                        Text="{Binding LocalPort}"
                        IsEnabled="{Binding CanStart}"/>

                <!-- Строка 2 -->
                <Label Grid.Row="1" Grid.Column="0" Content="Master IP:"/>
                <TextBox Grid.Row="1" Grid.Column="1" 
                        Text="{Binding MasterIp}"
                        IsEnabled="{Binding CanStart}">
                    <TextBox.Style>
                        <Style TargetType="TextBox" BasedOn="{StaticResource {x:Type TextBox}}">
                            <Setter Property="Visibility" Value="Collapsed"/>
                            <Style.Triggers>
                                <DataTrigger Binding="{Binding IsClientNode}" Value="True">
                                    <Setter Property="Visibility" Value="Visible"/>
                                </DataTrigger>
                                <DataTrigger Binding="{Binding IsSlaveNode}" Value="True">
                                    <Setter Property="Visibility" Value="Visible"/>
                                </DataTrigger>
                            </Style.Triggers>
                        </Style>
                    </TextBox.Style>
                </TextBox>

                    <Label Grid.Row="1" Grid.Column="2" Content="Master порт:">
                        <Label.Style>
                            <Style TargetType="Label" BasedOn="{StaticResource {x:Type Label}}">
                                <Setter Property="Visibility" Value="Collapsed"/>
                                <Style.Triggers>
                                    <DataTrigger Binding="{Binding IsClientNode}" Value="True">
                                        <Setter Property="Visibility" Value="Visible"/>
                                    </DataTrigger>
                                    <DataTrigger Binding="{Binding IsSlaveNode}" Value="True">
                                        <Setter Property="Visibility" Value="Visible"/>
                                    </DataTrigger>
                                </Style.Triggers>
                            </Style>
                        </Label.Style>
                    </Label>
                    <TextBox Grid.Row="1" Grid.Column="1" 
        Text="{Binding MasterIp}"
        IsEnabled="{Binding CanStart}">
                        <TextBox.Style>
                            <Style TargetType="TextBox" BasedOn="{StaticResource {x:Type TextBox}}">
                                <Setter Property="Visibility" Value="Collapsed"/>
                                <Style.Triggers>
                                    <DataTrigger Binding="{Binding IsClientNode}" Value="True">
                                        <Setter Property="Visibility" Value="Visible"/>
                                    </DataTrigger>
                                    <DataTrigger Binding="{Binding IsSlaveNode}" Value="True">
                                        <Setter Property="Visibility" Value="Visible"/>
                                    </DataTrigger>
                                </Style.Triggers>
                            </Style>
                        </TextBox.Style>
                    </TextBox>

                    <!-- Кнопки управления -->
                    <StackPanel Grid.Row="0" Grid.Column="4" Grid.RowSpan="2" 
                           Orientation="Vertical" VerticalAlignment="Center">
                        <Button Content="Запустить" Command="{Binding StartNodeCommand}"
                           Background="#4CAF50" Foreground="White"
                           IsEnabled="{Binding CanStart}"/>
                        <Button Content="Остановить" Command="{Binding StopNodeCommand}"
                           Background="#f44336" Foreground="White"
                           IsEnabled="{Binding CanStop}"/>
                    </StackPanel>

                    <!-- Кнопки для Client -->
                    <StackPanel Grid.Row="2" Grid.Column="0" Grid.ColumnSpan="5" 
                           Orientation="Horizontal" HorizontalAlignment="Left">
                        <StackPanel.Style>
                            <Style TargetType="StackPanel">
                                <Setter Property="Visibility" Value="Collapsed"/>
                                <Style.Triggers>
                                    <DataTrigger Binding="{Binding IsClientNode}" Value="True">
                                        <Setter Property="Visibility" Value="Visible"/>
                                    </DataTrigger>
                                </Style.Triggers>
                            </Style>
                        </StackPanel.Style>

                        <Button Content="Загрузить изображения" Command="{Binding LoadImagesCommand}"
                           Background="#2196F3" Foreground="White"/>

                        <!-- НОВЫЙ ЭЛЕМЕНТ: Выбор размера фильтра -->
                        <Label Content="Размер фильтра:" VerticalAlignment="Center" Margin="15,0,0,0"/>
                        <ComboBox ItemsSource="{Binding FilterSizes}" 
                             SelectedItem="{Binding SelectedFilterSize}"
                             Width="100"
                             ToolTip="Выберите размер окна медианного фильтра"/>

                        <Button Content="Отправить на обработку" Command="{Binding SendImagesCommand}"
                           Background="#FF9800" Foreground="White"/>
                        <Button Content="Сохранить результаты" Command="{Binding SaveProcessedImagesCommand}"
                           Background="#9C27B0" Foreground="White"/>
                    </StackPanel>
            </Grid>
        </GroupBox>

        <!-- Основная рабочая область -->
        <Grid Grid.Row="1" Margin="0,10,0,0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="2*"/>
                <ColumnDefinition Width="3*"/>
            </Grid.ColumnDefinitions>

            <!-- Журнал событий -->
            <GroupBox Header="Журнал событий" Grid.Column="0">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <ListBox Grid.Row="0" ItemsSource="{Binding LogMessages}" 
                            FontFamily="Consolas" FontSize="11"
                            ScrollViewer.HorizontalScrollBarVisibility="Auto"
                            ScrollViewer.VerticalScrollBarVisibility="Auto">
                        <ListBox.ItemContainerStyle>
                            <Style TargetType="ListBoxItem">
                                <Style.Triggers>
                                    <DataTrigger Binding="{Binding Path=., Converter={StaticResource StringContainsConverter}, ConverterParameter='ОШИБКА'}" Value="True">
                                        <Setter Property="Foreground" Value="Red"/>
                                    </DataTrigger>
                                </Style.Triggers>
                            </Style>
                        </ListBox.ItemContainerStyle>
                    </ListBox>

                    <Button Grid.Row="1" Content="Очистить журнал" Command="{Binding ClearLogsCommand}"
                           HorizontalAlignment="Right"/>
                </Grid>
            </GroupBox>

            <!-- Галерея изображений -->
            <GroupBox Header="Изображения" Grid.Column="1">
                <ScrollViewer VerticalScrollBarVisibility="Auto">
                    <ItemsControl ItemsSource="{Binding Images}">
                        <ItemsControl.ItemTemplate>
                            <DataTemplate>
                                <Border BorderBrush="LightGray" BorderThickness="1" 
                                       Margin="5" Padding="10" CornerRadius="5">
                                    <Grid>
                                        <Grid.RowDefinitions>
                                            <RowDefinition Height="Auto"/>
                                            <RowDefinition Height="Auto"/>
                                        </Grid.RowDefinitions>

                                        <TextBlock Grid.Row="0" Text="{Binding FileName}" 
                                                  FontWeight="Bold" FontSize="14" Margin="0,0,0,10"/>

                                        <Grid Grid.Row="1">
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="*"/>
                                                <ColumnDefinition Width="*"/>
                                            </Grid.ColumnDefinitions>

                                            <!-- Оригинал -->
                                            <StackPanel Grid.Column="0" Margin="5">
                                                <TextBlock Text="Оригинал" FontWeight="SemiBold" 
                                                          HorizontalAlignment="Center" Margin="0,0,0,5"/>
                                                <Border BorderBrush="Gray" BorderThickness="1">
                                                    <Image Source="{Binding OriginalImage}" 
                                                          MaxHeight="200" Stretch="Uniform"/>
                                                </Border>
                                            </StackPanel>

                                            <!-- Обработанное -->
                                            <StackPanel Grid.Column="1" Margin="5">
                                                <TextBlock Text="Обработанное" FontWeight="SemiBold" 
                                                          HorizontalAlignment="Center" Margin="0,0,0,5"/>
                                                <Border BorderBrush="Gray" BorderThickness="1">
                                                    <Grid>
                                                        <Image Source="{Binding ProcessedImage}" 
                                                              MaxHeight="200" Stretch="Uniform"/>
                                                        <TextBlock Text="{Binding StatusText}" 
                                                                  VerticalAlignment="Center" 
                                                                  HorizontalAlignment="Center"
                                                                  FontSize="16" FontWeight="Bold"
                                                                  Foreground="Gray">
                                                            <TextBlock.Style>
                                                                <Style TargetType="TextBlock">
                                                                    <Setter Property="Visibility" Value="Collapsed"/>
                                                                    <Style.Triggers>
                                                                        <DataTrigger Binding="{Binding HasProcessedImage}" Value="False">
                                                                            <Setter Property="Visibility" Value="Visible"/>
                                                                        </DataTrigger>
                                                                    </Style.Triggers>
                                                                </Style>
                                                            </TextBlock.Style>
                                                        </TextBlock>
                                                    </Grid>
                                                </Border>
                                            </StackPanel>
                                        </Grid>
                                    </Grid>
                                </Border>
                            </DataTemplate>
                        </ItemsControl.ItemTemplate>
                    </ItemsControl>
                </ScrollViewer>
            </GroupBox>
        </Grid>
    </Grid>
</Window>
